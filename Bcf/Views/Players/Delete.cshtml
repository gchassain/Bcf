@model Bcf.ViewModels.DeletePlayerViewModel

@{
    ViewData["Title"] = "Supprimer joueur";
}

<h1>Supprimer</h1>

<h3>
    Êtes-vous sûr de vouloir supprimer le profil de @Model.FullName?
</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour</a>
    </form>
</div>
